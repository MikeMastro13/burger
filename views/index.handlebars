<h1>Eat Da Burger!</h1>

<img src="/assets/images/burger.png" alt="">



<div class="burger-list">
  <div class="list">
    <h2>Ready to Devour</h2>

    <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{!-- {{> burgers devoured=true}} --}}
        <li>{{this.burger_name}}</li>
      {{/unless}}
    {{/each}}
    </ul>
  </div>

  <div class="list">
  <h2>Devoured</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{!-- {{> burgers devoured=false}} --}}
        <li>{{this.burger_name}}</li>
      {{/if}}
    {{/each}}
  </ul>
  </div>
</div>

<h2>Enter a new burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Have you devoured this burger or no?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to Devour
  </div>

  <button class="button-submit" type="submit">Add Burger</button>
</form>
